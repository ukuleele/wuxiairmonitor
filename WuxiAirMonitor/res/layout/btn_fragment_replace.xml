<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linerlayout_fragbtn"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_bg_color"
    android:clickable="true"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_fragment_btn"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:scaleType="centerInside"
        android:src="@drawable/bottom_unit2" />

    <TextView
        android:id="@+id/txt_fragment_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/history"
        android:textColor="@drawable/bottom_text_color"
        android:textSize="14sp" />

</LinearLayout>