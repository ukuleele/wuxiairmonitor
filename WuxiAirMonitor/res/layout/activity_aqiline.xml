<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >
    
    
    <LinearLayout
        android:id="@+id/main_title2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#77000000"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/btnline_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/title_bg_color"
            android:clickable="true"
            android:padding="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/back_samble" />

        <TextView
            android:id="@+id/txt2_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="@string/loading"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/btn_update"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/title_bg_color"
            android:clickable="true"
            android:padding="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/title_update"
            android:visibility="invisible" />
    </LinearLayout>
    

    <LinearLayout
        android:id="@+id/linear_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#2F383D"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_line_aqi"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/arrow2"
            android:gravity="center"
            android:text="AQI"
            android:textColor="#FFF" />

        <RelativeLayout
            android:layout_width="1px"
            android:layout_height="25dp"
            android:background="#44FFFFFF" />

        <TextView
            android:id="@+id/txt_line_pm25"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="PM2.5"
            android:textColor="#FFF" />

        <RelativeLayout
            android:layout_width="1px"
            android:layout_height="25dp"
            android:background="#44FFFFFF" />

        <TextView
            android:id="@+id/txt_line_pm10"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="PM10"
            android:textColor="#FFF" />

        <RelativeLayout
            android:layout_width="1px"
            android:layout_height="25dp"
            android:background="#44FFFFFF" />

        <TextView
            android:id="@+id/txt_line_no2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="NO2"
            android:textColor="#FFF" />

        <RelativeLayout
            android:layout_width="1px"
            android:layout_height="25dp"
            android:background="#44FFFFFF" />

        <TextView
            android:id="@+id/txt_line_so2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="SO2"
            android:textColor="#FFF" />

        <RelativeLayout
            android:layout_width="1px"
            android:layout_height="25dp"
            android:background="#44FFFFFF" />

        <TextView
            android:id="@+id/txt_line_o3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="O3"
            android:textColor="#FFF" />

        <RelativeLayout
            android:layout_width="1px"
            android:layout_height="25dp"
            android:background="#44FFFFFF" />

        <TextView
            android:id="@+id/txt_line_co"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="CO"
            android:textColor="#FFF" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_line"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/chart_bg_color" >

        <ProgressBar
            android:id="@+id/progress_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/frame_loading" />

        <RelativeLayout
            android:id="@+id/rela_chartview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" >
        </RelativeLayout>

    </FrameLayout>

</LinearLayout>